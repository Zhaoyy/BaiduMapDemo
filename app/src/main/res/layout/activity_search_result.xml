<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

  <LinearLayout
      android:id="@+id/ll_search"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="56dp"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:background="@android:color/white"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:paddingRight="8dp"
      >

    <ImageButton
        android:id="@+id/ibtn_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerInside"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@mipmap/common_icon_back_btn_normal"
        android:background="@drawable/quik_search_btn_bg"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_weight="1.0"
        android:enabled="false"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/text_black_1"
        android:padding="8dp"
        />

    <ImageButton
        android:id="@+id/ibtn_map"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerInside"
        android:src="@mipmap/topbar_view_map"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/quik_search_btn_bg"
        />

  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/text_black_5"
      />

  <ListView
      android:id="@+id/listView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="8dp"
      android:scrollbars="none"
      android:dividerHeight="8dp"
      android:divider="@color/transparent"
      />

</LinearLayout>
