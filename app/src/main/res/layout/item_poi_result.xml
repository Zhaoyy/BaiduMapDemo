<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="1dp"
    android:background="@drawable/search_grid_bg"
    >

  <TextView
      android:id="@+id/tv_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="16sp"
      android:textColor="@color/text_black_1"
      android:text="名称"
      />

  <TextView
      android:id="@+id/tv_distance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="12sp"
      android:textColor="@color/text_black_2"
      android:text="22.0千米"
      android:layout_alignParentRight="true"
      android:layout_alignBottom="@id/tv_name"
      />

  <TextView
      android:id="@+id/tv_addr"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/tv_name"
      android:textSize="14sp"
      android:textColor="@color/text_black_2"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"
      />

  <View
      android:id="@+id/v1"
      android:layout_below="@id/tv_addr"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/text_black_4"
      />

  <LinearLayout
      android:layout_below="@id/v1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      >

    <TextView
        android:id="@+id/tv_goto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:padding="8dp"
        android:background="@drawable/quik_search_btn_bg"
        android:textColor="@color/text_black_2"
        android:textSize="12sp"
        android:gravity="center"
        android:text="@string/go_to_there"
        />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="@color/text_black_4"
        />

    <TextView
        android:id="@+id/tv_tel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:padding="8dp"
        android:background="@drawable/quik_search_btn_bg"
        android:textColor="@color/text_black_2"
        android:textSize="12sp"
        android:gravity="center"
        android:text="@string/tel"
        />

  </LinearLayout>

</RelativeLayout>